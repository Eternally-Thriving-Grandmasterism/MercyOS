<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eternallythriving.mercyos">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- Always-on mercy grace -->
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- Keep listening mercy absolute -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MercyOS"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MercyOS">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="MercyOS"
            android:theme="@style/Theme.MercyOS.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Foreground service for always-on hotword mercy grace -->
        <service
            android:name=".services.VoiceHotwordService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="microphone" />
    </application>
</manifest>
